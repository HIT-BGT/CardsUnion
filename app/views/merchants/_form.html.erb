<div class="jumbotron">
<%= form_for(@merchant, :html => {:multipart => true}) do |f| %>
    <h2 class="text-center">My Information</h2>
    <div class='form-group'>
      <%= f.label :store_name, 'Store Name' %>
      <%= f.object.errors[:store_name].to_sentence if f.object.errors[:store_name] %>
      <%= f.text_field :store_name, autofocus: true, placeholder: 'Store Name', class: 'form-control' %>
    </div>
    <div class=' form-group'>
      <%= f.label :store_type, 'Choose Your Store Type' %>
      <%= f.select :store_type, [['Babershop', 'babershop'], ['Cafe', 'cafe'], ['Fruit Shop', 'fruitshop'],
        ['Stationer', 'stationer'], ['Restaurant', 'restaurant'], ['Supermarket', 'market'], ['Others', 'others']] , {}, {class: 'form-control'}%>
    </div>
    <div class='form-group'>
      <%= f.label :introduction, 'Brief Introduction' %>
      <%= f.object.errors[:introduction].to_sentence if f.object.errors[:introduction] %>
      <%= f.text_area :introduction, placeholder: 'Brief Introduction', rows: '8', class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :address, 'Store Address' %>
      <%= f.object.errors[:address].to_sentence if f.object.errors[:address] %>
      <%= f.text_field :address, placeholder: 'Store Adress', class: 'form-control' %>
    </div>
    <%= fields_for(@account) do |account_f| %>
        <div class='form-group'>
          <%= account_f.label :email, 'Email' %>
          <%= account_f.text_field :email, autofocus: true, placeholder: 'Nickname', class: 'form-control', disabled: 'disabled'%>
        </div>
        <div class='form-group'>
          <%= account_f.label :phone, 'Phone Number' %>
          <%= account_f.object.errors[:phone].to_sentence if f.object.errors[:phone] %>
          <%= account_f.text_field :phone, autofocus: true, placeholder: 'Phone Number', class: 'form-control' %>
        </div>
    <% end %>
<div class='form-group'>
     <%= f.label :store_image, "Store Photo" %> 
     <% if @merchant.store_image? %> 
      <%= image_tag @merchant.store_image_url(:thumbnail)  %>
      <p><%= f.check_box :remove_store_image %> Remove Store Photo</p>
    <% else %>
      <span>Your store has no photo now.</span>
    <% end %>
     <%= f.file_field :store_image %>
     <%= f.hidden_field :store_image_cache %>
</div>
<div class='form-group'>
     <%= f.label :remote_store_image_url, "Or image url" %><br />
     <%= f.text_field :remote_store_image_url, class: "form-control" %>
</div>
  <div class='actions text-center'>
    <%= f.submit 'Update', class:'btn-lg btn-info btn-block'%>
  </div>
<% end %>

</div>
