<div class="jumbotron col-md-3 has-success col-md-offset-5 text-center">
<%= form_for(@message, url: merchant_messages_path(@merchant)) do |f| %>
  <div class="form-group">
    <h3><%= @merchant.store_name %></h3>
  </div>
  <div class="form-group">
    <%= f.label :content, "Your Compliant", style: "display:none;" %>
    <%= f.object.errors[:content].to_sentence if f.object.errors[:content] %>
      <%= f.text_area :content, placeholder: "Your Compliant", class: "form-control", style: "height:200px;"%>
  </div>
  <div class="actions">
    <%= f.submit 'Submit'%>
  </div>
<% end %>
</div>
