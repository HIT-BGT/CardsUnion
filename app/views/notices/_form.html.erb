<%= form_for(@notice) do |f| %>
  <% if @notice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@notice.errors.count, "error") %> prohibited this notice from being saved:</h2>
      <ul>
      <% @notice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br />
<div class="col-md-6 form-group col-md-offset-3">
  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title ,class: "form-control item-block"%>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content ,class: "form-control item-block" , rows: "15" %>
    <br />
  </div>
  <div class="field">
   <%= f.label :notice_image, "Photo" %>
    <% if @notice.notice_image? %> 
      <%= image_tag @notice.notice_image_url(:thumbnail)  %>
      <p><%= f.check_box :remove_notice_image %> Remove photo</p>
    <% else %>
      <span>Your notice has no photo now.</span>
    <% end %>
    <%= f.file_field :notice_image %>
    <%= f.hidden_field :notice_image_cache %>
    </div>
  <div class="actions">
    <%= f.submit "Save" , class: "btn btn-block btn-success"%>
  </div>
</div>
<% end %>
