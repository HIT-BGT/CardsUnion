<link rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">
<style type="text/css">
  #carouselimg{height:500px;}
  .bigfont{font-size:51px;}
</style>
<div style="width:100%;border:none">
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <div id="carouselimg" class="item active">
      <%= image_tag "bgs.jpg", width: "1503px", height: "900px" %>
      <div class="carousel-caption">
        <div class="bigfont">To Go and Enjoy your Life~</div>
        <br /><br /><br /><br /><br /><br />
      </div>
    </div>
    <% count = 1 %>
    <% @scroll_notices.each do |notice| %>
    <div id="carouselimg" class="item img-thumbnail" style="padding:0;">
      <%= image_tag "scroll_image"+count.to_s+".jpeg",  width: "1503px", height: "900px"%>
      <% count += 1 %>
      <div class="carousel-caption">
        <h3><%= notice.title %></h3>
        <h3>Go and Enjoy your Life~</h3>
      </div>
    </div>
    <% end %>
  </div>
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
<div class="row col-md-10 col-md-offset-1 ">
  <br /><br />
<% @notices.each do |notice| %>
  <div class="col-sm-6">
    <div class="thumbnail" onClick="window.location.href='<%= new_notice_path %>'" style="cursor:pointer;height:500px;">
      <%= render partial: 'img', locals: {notice: notice} %>
      <div class="caption">
        <h3><%= notice.title %></h3>
        <p style="position:absolute;bottom:27px;">
          <%= link_to 'Details', notice, class: "btn btn-info notices" %>
          <% if created_by_current_user(notice) %> <%= link_to ' Edit ', edit_notice_path(notice) , class: "btn btn-success" %><% end %>
          <% if created_by_current_user(notice) %><%= link_to 'Destroy', notice, class: "btn btn-warning" , method: :delete, data: { confirm: 'Are you sure?' } %><% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>
<% if current_user && current_user.merchant? %>

<div class="col-sm-6">
  <div class="thumbnail" onClick="window.location.href='<%= new_notice_path %>'" style="cursor:pointer;height:500px;">
    <%= image_tag '1.png', class: "add-notice", style: "cursor:pointer;width:481px;height:500px;"%>
  </div>
</div>

</div>
<% end %>