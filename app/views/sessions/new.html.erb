  <body background-img="our-vision.jpg">
    <div style="position:fixed; left:0; top:0; width:100%; height:100%; z-index:-5000">
      <%= image_tag 'our-vision.jpg', style: "width:100%;"%>
    </div>
    
    <style type="text/css">
    @font-face {
        font-family: "VolutaScript";       
        src: url("/assets/VolutaScript.woff") format("woff"),       
        url("/assets/VolutaScript.ttf") format("truetype"),       
        url("/assets/VolutaScript.svg#volutascript") format("svg");     
      }
    </style>
    <br><br><br>
    <div class="col-md-3 col-md-offset-8 has-info jumbotron">
      <%= form_for(:session, url:login_path) do |f| %>
      <div class="form-group">
        <label for="exampleInputEmail1" > Email address (or Phone Number)</label>
        <% if flash.key?(:email_error) %><br/><%= flash[:email_error] %> <% end %>
         <%= f.text_field :email, autofocus: true, placeholder: "Email" ,
            class: "form-control item-block", id: "exampleInputEmail1" %>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1" style="opacity:.9">Password</label>
        <% if flash.key?(:password_error) %><br/><%= flash[:password_error] %> <% end %>
       <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class:"form-control item-block", id: "exampleInputPassword1"%>
      </div>

      <div class="form-group">
        <label for="selectUserType">Choose Your User Type</label>
        <% if flash.key?(:usertype_error) %><br/><%= flash[:usertype_error] %> <% end %>
          <%= f.select :user_type, [['I am a merchant!', 'Merchant'], ['I am a consumer!', 'Consumer']] , {}, {class: "form-control", id: "selectUserType"} %>
      </div>
      <div class="form-group">
        <label for="remember_me">Remember Me
          <%= f.check_box(:remember_me,{id: 'remember_me'},1) %>
        </label>
        &nbsp
        &nbsp
        <label>
          <%= link_to "forget password?", new_password_reset_path, {class: 'hovernankan forget'} %>
        </label>
        </div>
      <%= f.submit "Log in" , class: "btn btn-block btn-success"%>
      <%= link_to "No Account ?  Sign Up", new_account_path, {class: "btn btn-block btn-info notices" } %>
      <% end %>
    </div>
  </body>