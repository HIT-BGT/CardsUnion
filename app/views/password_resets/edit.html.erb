<div style="position:fixed; left:0; top:0; width:100%; height:100%; z-index:-5000">
      <img src="../images/bgs1.jpg" width=100% height=100%>
</div>
<div class="jumbotron col-md-4 col-md-offset-4">
<h3 class="text-center">Reset Password</h3>
<br />
<%= form_for @account, :url => password_reset_path(params[:id]) do |f| %>
  <% if @account.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @account.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.password_field :password , placeholder: "Password",class: "item-block"%>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmtion", class: "item-block" %>
  </div>
  <br />
  <div class="actions"><%= f.submit "Update Password", class: "btn btn-info item-block" %></div>
<% end %>
</div>