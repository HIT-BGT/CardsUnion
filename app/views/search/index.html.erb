<div style="position:fixed; left:0; top:0; width:100%; height:100%; z-index:-5000">
      <%= image_tag("mainbg2.jpg", width: "100%", height: "100%") %>
</div>  
<div>
<%= form_for @search,  :url => search_path ,:method => :get do |f| %>
</div>
<div class="pull-right col-md-3">
<ul class="list-group">
  <% f.checks :store_type_in,
    [['Barbershop', 'babershop'], ['Cafe', 'cafe'], ['Fruit Shop', 'fruitshop'],['Stationer', 'stationer'],['Restaurant', 'restaurant'],['Supermarket', 'market'],['Others','others']], :class => 'checkboxy' do |check| %>
    <li class="list-group-item">
      <%= check.box %>
      <%= check.label %>
    </li>
  <% end %>
</ul>
<ul class="list-group">
<li class="list-group-item"><%= f.label :store_name_contains %></li>
<li class="list-group-item"><%= f.text_field :store_name_contains %></li>
<li class="list-group-item"><%= sort_link @search, :store_name ,"Sort by Name"%></li>
</ul>
<li class="list-group-item"><%= f.submit 'Search', class: 'btn btn-info btn-block' %></li>
</div>
<% end %>

<div class="container col-md-9">
<% @merchants.each do |merchant| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <% if merchant.store_image? %>
        <%= image_tag merchant.store_image_url.to_s %>
      <% else %>
        <%= image_tag "../images/bgs1.jpg" %>
      <% end %>
      <div class="caption">
        <h3><%= merchant.store_name %></h3>
        <p>
          <%= link_to 'Details', merchant, type: "button", class: " merchants btn btn-lg btn-info" %>
        </p>
      </div>
    </div>
  </div>
<% end %>
