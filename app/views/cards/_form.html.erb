<%= form_for(@card) do |f| %>
  <div class="input-group input-group-lg" style="width:100%">
    <%= f.text_field :balance , class: "form-control", placeholder: "Balance"%>
  </div>
  <br />
  <div class="input-group input-group-lg" style="width:100%">
    <!-- Maybe we can decorate it a bit. -->
    <%= f.object.errors[:consumer_id].to_sentence if f.object.errors[:consumer_id] %>
    <%= text_field_tag :consumer, nil, class: "form-control", autocomplete: "off", placeholder: "Phone Number"%>
    <br />
    <div class="actions">
      <%= f.submit class: "btn btn-info btn-block btn-lg"%>
    </div>
  </div>

  <!--used for autocomplete -->
  <script type="text/javascript">
  $('#consumer').typeahead({
          name: 'phone',
          remote: '/cards/autocomplete?query=%QUERY'
      });
  </script>
  <script type="text/javascript"></script>
  <script src="../assets/jquery.js"></script>
<% end %>