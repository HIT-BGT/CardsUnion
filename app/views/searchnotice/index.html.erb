<div>
<%= form_for @search,  :url => searchnotice_path ,:method => :get do |f| %>
</div>
<div class="pull-right col-md-3">
<ul class="list-group">
<li class="list-group-item"><%= f.label :title_or_content_contains %></li>
<li class="list-group-item"><%= f.text_field :title_or_content_contains, class:"item-block"%></li>
<li class="list-group-item item-block"><%= f.submit 'Search', class: 'btn btn-info btn-block' %></li>
</ul>
<ul class="list-group">
<li class="list-group-item text-center"><%= sort_link @search, :title ,"Sort by Name" %></li>
</ul>
</div>
<% end %>

<div class="container col-md-9">
<% @notices.each do |notice| %>
  <div class="col-sm-6 col-md-4">
    <% notice_path = 'notices/'+notice.id.to_s %>
    <div class="thumbnail srch_notices" onClick="window.location.href='<%= notice_path %>'" style="cursor:pointer">
    	<% image_path=notice.notice_image_url(:index) %>
    	<% if image_path == nil %>
    	<%= image_tag "alt_store_image2.jpg" %>
    	<% else %>
    	<%= image_tag image_path.to_s %>
    	<% end %>
    	<div class="caption">
       		<h4 class="text-center"><%=notice.title%></h4>
    	</div>
    </div>
  </div>
<% end %>
